{
  "openapi": "3.0.0",
  "info": {
    "title": "API Restaurante",
    "version": "1.0.0",
    "description": "Documentação da API Restaurante com Swagger"
  },
  "paths": {
    "/api/v1/list/cardapio": {
      "get": {
        "summary": "Lista o cardápio completo",
        "responses": {
          "200": {
            "description": "Lista de categorias e pratos"
          }
        }
      }
    },
    "/api/v1/list/prato": {
      "get": {
        "summary": "Busca prato(s) por filtros",
        "parameters": [
          {
            "name": "nome",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de pratos filtrados"
          }
        }
      }
    },
    "/api/v1/list/pedidos": {
      "get": {
        "summary": "Lista todos os pedidos",
        "responses": {
          "200": {
            "description": "Lista de pedidos"
          }
        }
      }
    },
    "/api/v1/list/pedidos/{id}": {
      "get": {
        "summary": "Retorna os detalhes de um pedido específico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Pedido encontrado"
          },
          "404": {
            "description": "Pedido não encontrado"
          }
        }
      }
    },
    "/api/v1/list/pedidos/valor-total": {
      "get": {
        "summary": "Retorna o valor total de um pedido",
        "parameters": [
          {
            "name": "p",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Valor total calculado"
          }
        }
      }
    },
    "/api/v1/list/usuarios": {
      "get": {
        "summary": "Lista todos os usuários cadastrados",
        "responses": {
          "200": {
            "description": "Lista de usuários"
          }
        }
      }
    },
    "/api/v1/usuarios": {
      "post": {
        "summary": "Cadastra um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string" },
                  "email": { "type": "string" },
                  "senha": { "type": "string" },
                  "endereco": { "type": "string" },
                  "telefone": { "type": "string" },
                  "role": { "type": "string", "enum": ["cliente", "admin"] }
                },
                "required": ["nome", "email", "senha", "role"]
              },
              "example": {
                "nome": "Felipe Jose",
                "email": "felipejose@example.com",
                "senha": "1234567",
                "endereco": "Rua das Palmeiras, 123",
                "telefone": "11987654321",
                "role": "cliente"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          }
        }
      }
    }
  }
}
